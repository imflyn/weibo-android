<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"  
		             android:id="@+id/myInfoLinearlayout"
		             android:layout_width="fill_parent"
		             android:layout_height="100dip"
		             android:layout_margin="5dip"
		             android:background="@drawable/corner_view_setting"
		             android:orientation="vertical" >

		         <LinearLayout
		             android:layout_width="fill_parent"
		             android:layout_height="wrap_content"
		             android:layout_weight="1.0"
		             android:orientation="horizontal" >

		                 <LinearLayout
		                     android:id="@+id/myWeibosLinearLayout"
		                     android:layout_width="0px"
		                     android:layout_height="fill_parent"
		                     android:layout_weight="1.0"
		                     android:background="@drawable/wb_info_box_selector1"
		                     android:clickable="true"
		                     android:orientation="horizontal" >

		                 <TextView
		                     android:layout_width="0px"
		                     android:layout_height="fill_parent"
		                     android:layout_weight="1.0"
		                     android:paddingLeft="25dip"
							 android:gravity="center_vertical"   
		                     android:text="@string/boradcast"
		                     android:textColor="@color/lbs_gray"
		                     android:textSize="13sp" />

		                  <TextView 
		                     android:id="@+id/tv_broadcastNums" 
		                     android:layout_width="0px"
		                     android:layout_height="fill_parent"
		                     android:layout_weight="1.0"
							 android:textColor="@color/black"	
							 android:text="55"	
							 android:gravity="center"   
							 android:textSize="18sp"          
		                     />
		                 </LinearLayout>
		                 <View
		                     android:layout_height="fill_parent"
		                     android:layout_width="0.01dip"
		                     android:background="@color/silver"
		                     />
		                 <LinearLayout 
		                 android:id="@+id/myAlbumLinearLayout"    
		                 android:layout_width="0px"
		                 android:layout_height="fill_parent"
		                 android:layout_weight="1.0"
		                 android:orientation="horizontal"
		                 android:clickable="true"
		                 android:background="@drawable/wb_info_box_selector2"
		                 >
		                 <TextView 
		                     android:layout_width="0px"
		                     android:layout_height="fill_parent"
		                     android:layout_weight="1.0"
							 android:textColor="@color/lbs_gray"	
							 android:text="@string/smailphotos"	
							 android:textSize="13sp"
							 android:paddingLeft="25dip"
							 android:gravity="center_vertical"   
		                     />

		                  <ImageView
		                      android:layout_width="0px"
		                      android:layout_height="fill_parent"
		                      android:layout_weight="1.0"
		                      android:background="@android:color/transparent"
		                      android:scaleType="center"
		                      android:src="@drawable/wb_icon_micro_album_nor" />

		                 </LinearLayout> 
		             </LinearLayout>
		             <View
		                     android:layout_height="0.01dip"
		                     android:layout_width="fill_parent"
		                     android:background="@color/silver"
		                     />

		             <LinearLayout
		                 android:layout_width="fill_parent"
		                 android:layout_height="wrap_content"
		                 android:layout_weight="1.0"
		                 android:orientation="horizontal" >

		                 <LinearLayout 
		                 android:id="@+id/myListenersLinearLayout"    
		                 android:layout_width="0px"
		                 android:layout_height="fill_parent"
		                 android:layout_weight="1.0"
		                 android:orientation="horizontal"
		                  android:clickable="true"
		                 android:background="@drawable/wb_info_box_selector3"
		                 >
		                 <TextView 
		                     android:layout_width="0px"
		                     android:layout_height="fill_parent"
		                     android:layout_weight="1.0"
							 android:textColor="@color/lbs_gray"	
							 android:text="@string/fans"	
							 android:textSize="13sp"
							 android:paddingLeft="25dip"
							 android:gravity="center_vertical"                     
		                     />
		                  <TextView 
		                     android:id="@+id/tv_fanNums" 
		                     android:layout_width="0px"
		                     android:layout_height="fill_parent"
		                     android:layout_weight="1.0"
							 android:textColor="@color/black"	
							 android:text="20"	
							 android:gravity="center" 
							 android:textSize="18sp"                    
		                     />
		                 </LinearLayout> 
		                  <View
		                     android:layout_height="fill_parent"
		                     android:layout_width="0.01dip"
		                     android:background="@color/silver"
		                     />
		                 <LinearLayout 
		                 android:id="@+id/heedersLinearLayout"
		                 android:layout_width="0px"
		                 android:layout_height="fill_parent"
		                 android:layout_weight="1.0"
		                 android:orientation="horizontal"
		                 android:clickable="true"
		                 android:background="@drawable/wb_info_box_selector4"
		                 >
		                 <TextView 
		                     android:layout_width="0px"
		                     android:layout_height="fill_parent"
		                     android:layout_weight="1.0"
							 android:textColor="@color/lbs_gray"	
							 android:text="@string/listener"	
							 android:textSize="13sp"
							 android:paddingLeft="25dip"
							 android:gravity="center_vertical"                      
		                     />
		                 <TextView 
		                     android:id="@+id/tv_listenNums" 
		                     android:layout_width="0px"
		                     android:layout_height="fill_parent"
		                     android:layout_weight="1.0"
							 android:textColor="@color/black"	
							 android:text="22"	
							 android:gravity="center" 
							 android:textSize="18sp"                    
		                     />
		                 </LinearLayout> 
		             </LinearLayout>
		         </LinearLayout>     