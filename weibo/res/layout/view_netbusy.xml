<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout   
    xmlns:android="http://schemas.android.com/apk/res/android"  
    android:orientation="vertical"   
    android:layout_width="wrap_content"  
    android:layout_height="wrap_content"  
    android:background="@android:color/transparent"  
    android:layout_gravity="center"
   >
	
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:text="@string/net_busy"
        android:textColor="@color/lbs_gray"	
        android:gravity="center"
        android:textSize="14sp"
        />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/wb_icon_busy" />
    <Button 
        android:id="@+id/btn_tryAgain"
        android:layout_width="80dip"
        android:layout_height="35dip"
        android:text="@string/load_again"
        android:layout_gravity="center"
        android:layout_marginTop="12dip"
        android:textColor="@color/blank_color"
        android:background="@drawable/wb_loadagain_btn_selector"
        />
       
</LinearLayout>  