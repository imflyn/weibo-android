<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:background="@drawable/listview_item_background_normal_light"
                android:id="@+id/listview_root">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white">

        <net.weibo.app.widget.TimeLineAvatarImageView
            android:id="@+id/iv_head"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginBottom="-5dp"
            android:layout_marginRight="3dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:id="@+id/count_layout">


            <TextView
                android:id="@+id/iv_gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:drawableLeft="@drawable/icon_streetview"
                android:visibility="gone"
             />

            <TextView
                android:id="@+id/tv_repost_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lbs_gray"
                android:drawablePadding="4dp"
                android:layout_marginLeft="8dp"
                android:text="0"
                android:drawableLeft="@drawable/timeline_repost_dark"/>

            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:drawablePadding="4dp"
                android:textColor="@color/lbs_gray"
                android:text="0"
                android:drawableLeft="@drawable/timeline_comment_dark"/>

        </LinearLayout>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:clickable="false"
            android:textColor="@color/lbs_blue"
            android:layout_toRightOf="@id/iv_head"
            android:layout_toLeftOf="@id/count_layout"
            android:textStyle="bold"/>


        <net.weibo.app.widget.TimeTextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lbs_gray"
            android:layout_below="@id/username"
            android:layout_toRightOf="@id/iv_head"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/tv_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/time"
            android:textColor="@color/lbs_blue"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/time"
             android:textSize="12sp"
             android:singleLine="true"
            />
	
        <TextView
            android:layout_marginTop="6dp"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_below="@id/iv_head"
            android:lineSpacingMultiplier="1.2"
            android:clickable="false"
            />


        <net.weibo.app.widget.TimeLineImageView
            android:id="@+id/content_pic"
            android:layout_marginTop="3dp"
            android:layout_below="@id/content"
            android:layout_width="230dip"
            android:layout_height="140dip"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:background="@android:color/transparent"
        />

        <android.support.v7.widget.GridLayout
            android:layout_marginTop="3dp"
            android:id="@+id/content_pic_multi"
            android:layout_below="@id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:columnCount="3"
            android:rowCount="3"
            android:orientation="horizontal"
            android:useDefaultMargins="false"
            android:clickable="false">

            <net.weibo.app.widget.MultiPicturesChildImageView
                style="@style/listViewMultiImageView"/>

            <net.weibo.app.widget.MultiPicturesChildImageView
                style="@style/listViewMultiImageView"/>

            <net.weibo.app.widget.MultiPicturesChildImageView
                style="@style/listViewMultiImageView"/>

            <net.weibo.app.widget.MultiPicturesChildImageView
                style="@style/listViewMultiImageView"/>

            <net.weibo.app.widget.MultiPicturesChildImageView
                style="@style/listViewMultiImageView"/>

            <net.weibo.app.widget.MultiPicturesChildImageView
                style="@style/listViewMultiImageView"/>

            <net.weibo.app.widget.MultiPicturesChildImageView
                style="@style/listViewMultiImageView"/>

            <net.weibo.app.widget.MultiPicturesChildImageView
                style="@style/listViewMultiImageView"/>
            <net.weibo.app.widget.MultiPicturesChildImageView
                style="@style/listViewMultiImageView"/>

        </android.support.v7.widget.GridLayout>


        <View
            android:layout_below="@id/content"
            android:id="@+id/repost_flag"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/graywhite"
            android:layout_height="1dp"
            android:layout_width="match_parent"/>

        <TextView
            android:layout_below="@id/repost_flag"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="3dp"
            android:includeFontPadding="true"
            android:id="@+id/repost_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:lineSpacingMultiplier="1.2"
            android:visibility="gone"
            android:clickable="false"
            />


        <net.weibo.app.widget.TimeLineImageView
            android:layout_below="@id/repost_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:id="@+id/repost_content_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/timeline_pic_high_thumbnail_height"
            android:visibility="gone"
            android:clickable="true"
            android:padding="2dp"
            android:background="@android:color/transparent"
            />

        <android.support.v7.widget.GridLayout
            android:id="@+id/repost_content__pic_multi"
            android:layout_below="@id/repost_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:columnCount="3"
            android:rowCount="3"
            android:orientation="horizontal"
            android:useDefaultMargins="false"
            android:clickable="false">

            <net.weibo.app.widget.MultiPicturesChildImageView
                style="@style/listViewMultiImageView"/>

            <net.weibo.app.widget.MultiPicturesChildImageView
                style="@style/listViewMultiImageView"/>

            <net.weibo.app.widget.MultiPicturesChildImageView
                style="@style/listViewMultiImageView"/>

            <net.weibo.app.widget.MultiPicturesChildImageView
                style="@style/listViewMultiImageView"/>

            <net.weibo.app.widget.MultiPicturesChildImageView
                style="@style/listViewMultiImageView"/>

            <net.weibo.app.widget.MultiPicturesChildImageView
                style="@style/listViewMultiImageView"/>

            <net.weibo.app.widget.MultiPicturesChildImageView
                style="@style/listViewMultiImageView"/>

            <net.weibo.app.widget.MultiPicturesChildImageView
                style="@style/listViewMultiImageView"/>

            <net.weibo.app.widget.MultiPicturesChildImageView
                style="@style/listViewMultiImageView"/>

        </android.support.v7.widget.GridLayout>



    </RelativeLayout>
</RelativeLayout>